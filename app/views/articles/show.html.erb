<section class="max-w-[960px] mx-auto">
    <h1 class="text-2xl uppercase pb-8 text-center"><%= @article.title %></h1>

    <p class="pb-8 mb-8 border-b border-gray-400"><%= @article.body %></p>

    <ul class="flex space-x-4 pb-8 justify-end">
        <li><%= link_to "Edit", edit_article_path(@article), class: "px-4 py-2 rounded-md bg-green-600 hover:bg-green-700 text-white" %></li>
        <li><%= link_to "Destroy", article_path(@article), data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure?"
        }, class: "px-4 py-2 rounded-md bg-red-600 hover:bg-red-700 text-white" %></li>
    </ul>

    <h2 class="text-xl text-gray-600 uppercase">Comments</h2>
    <%= render @article.comments %>

    <h2 class="pt-8 uppercase text-xl text-gray-600">Add a comment:</h2>
    <%= render "comments/form", article: @article %>
</section>