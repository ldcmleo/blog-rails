<h1 class="text-2xl text-center uppercase py-8">Articles</h1>

<ul class="pb-8">
    <% @articles.each do |article| %>
        <li>
            <a class="block py-4 bg-gray-200 hover:bg-gray-100" href="/articles/<%= article.id %>">
                <%= article.title %>
            </a>
        </li>
    <% end %>
</ul>

<%= link_to "New Article", new_article_path, class: "px-4 py-2 text-white rounded-md bg-blue-600 hover:bg-blue-500" %>
